; Pkg name
[var pkg_name "fmt"]

[var authors "Bosley"]
[var license "MIT"]
[var version "0.0.0"]

; C++ shared lib to link to
[var library_file "fmt.lib"]
[var library_functions [list
   "_pkg_fmt_format_encode_"
   "_pkg_fmt_format_string_"
   "_pkg_fmt_join_"
   "_pkg_fmt_expand_"
   "_pkg_fmt_split_"
]]

; Files to include under the current pkg
[var source_files [list
   "fmt.saur"
]]