{
   "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "saurros-lang",
  "patterns": [
     {
        "include": "#keywords"
     },
     {
        "include": "#comments"
     },
     {
        "include": "#entity"
     },
     {
        "include": "#strings"
     },
     {
        "include": "#variables"
     },
     {
        "include": "#constants"
     }
  ],
  "repository": {
     "keywords": {
        "patterns": [
           {
           "name": "keyword.control.saur",
           "match": "\\b(set_at|rev|throw|try|as_list|as_int|as_str|as_real|yield|iter|true|false|nil|is_nil|box|compose|decompose|exit|clear|at|var|front|back|push|pop|list|set|block|len|put|putln|if|assert|loop|type|break)\\b"
           },
           {
           "name": "keyword.operator.saur",
           "match": "\\b(\\+|\\-\\/|\\*|\\>\\=|\\<\\=|\\>|\\<|seq|sneq|not|or|and|xor|bw_and|bw_or|bw_lsh|bw_rsh|bw_xor|bw_not)\\b"
           }
        ]
        },
     "entity": {
        "patterns": [
           {
           "name": "entity.name.function",
           "match": "\\b(lambda|async|chan|import|use)\\b"
           }
        ]
     },
     "comments": {
        "patterns": [
           {
           "name": "comment.line.semi-colon.saur",
           "begin": ";",
           "end": "\n"
           }
        ]
     },
     "strings":{
        "patterns": [
           {
           "name":"string.quoted.single.saur",
           "begin": "'",
           "end": "'"
           },
           {
           "name":"string.quoted.double.saur",
           "begin": "\"",
           "end": "\""
           }
        ]
     },
     "variables":{
        "patterns": [
           {
           "name": "variable.language.saur"	,
           "match": "[a-zA-Z0-9_]"
           }
        ]
     }
  },
  "scopeName": "source.saur"
}